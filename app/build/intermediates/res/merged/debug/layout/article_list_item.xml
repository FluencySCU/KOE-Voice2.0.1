<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.voice.view.CircleImageView
            android:id="@+id/article_list_item_userHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:background="#00000000" />

        <TextView
            android:id="@+id/article_list_item_userName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/article_list_item_userHead"
            android:layout_toEndOf="@+id/article_list_item_userHead"
            android:layout_toRightOf="@+id/article_list_item_userHead"
            android:gravity="center"
            android:text="用户名"
            android:textColor="#F6A520"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/article_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/article_list_item_userName"
            android:layout_toEndOf="@+id/article_list_item_userHead"
            android:layout_toRightOf="@+id/article_list_item_userHead"
            android:gravity="center"
            android:text="时间"
            android:textColor="#707070"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/article_list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="这里是动态内容"
        android:textColor="#000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/img_list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/article_list_item_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_list_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/article_list_item_img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_list_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/article_list_item_img7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/article_list_item_img9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/position" />

        <TextView
            android:id="@+id/article_list_item_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="定位地点"
            android:textColor="#707070"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/article_list_item_lookTimes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="浏览次数"
            android:textColor="#707070"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/dianzan"
            android:background="@drawable/dianzan" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/pinglun" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/zhuanfa" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="10dp"
        android:background="#dedede" />

</LinearLayout>